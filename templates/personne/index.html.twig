{% extends 'base.html.twig' %}

{% block title %}Liste des Personnes{% endblock %}

{% block body %}
<h1>Liste des Personnes</h1>

{% if personnes|length > 0 %}
    <p>Total: {{ personnes|length }} personne(s)</p>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Bâtiment</th>
                <th>Adresse</th>
            </tr>
        </thead>
        <tbody>
            {% for personne in personnes %}
                <tr>
                    <td>{{ personne.id }}</td>
                    <td>{{ personne.prenom }}</td>
                    <td>{{ personne.batiment ? personne.batiment.nom : '-' }}</td>
                    <td>{{ personne.batiment ? personne.batiment.adresse : '-' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucune personne trouvée dans la base de données.</p>
{% endif %}
{% endblock %}
